<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Blog</title>
</head>
<body style="background-color: white;">
    <%- include("../partials/navbar") %>
    <div class="container">

        <h1 class="mb-4">Blog App</h1>
        <a href="/articles/new" class="btn btn-success">New Article</a>
        <div class="row">
            <% articles.forEach(article => { %>
                
                <div class="col-lg-4">
                    <div class="card mt-4">
                        <div class="card-body">
                            <!-- <img class="card-img-top" src="<%= article.image %>" alt="Article Image"> -->
                            <h4 class="card-title"><%= article.title %></h4>
                            <div class="card-subitile text-muted mb-2">
                                <%= article.createdAt.toLocaleDateString() %> 
                            </div>
                            <div class="card-subitile mb-2">
                                <strong><%= article.author %></strong>
                            </div>
                            <div class="card-text mb-2">
                                <%= article.description %>
                            </div>
                            <a href="articles/<%= article.id %>" class="btn btn-primary">Read More</a>
                            <a href="articles/edit/<%= article.id %>" class="btn btn-warning">Edit</a>
                            <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>